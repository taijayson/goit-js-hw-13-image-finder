{{#each this}}
<li class="img-item">
    <div class="photo-card">
        <img src={{webformatURL}} data-source={{largeImageURL}} alt="" width="500px" height="300px" />

        <div class="stats">
            <p class="stats__item">
                <i class="material-icons">thumb_up</i>
                {{likes}}
            </p>
            <p class="stats__item">
                <i class="material-icons">visibility</i>
                {{views}}
            </p>
            <p class="stats__item">
                <i class="material-icons">comment</i>
                {{comments}}
            </p>
            <p class="stats__item">
                <i class="material-icons">cloud_download</i>
                {{downloads}}
            </p>
        </div>
    </div>
</li>
{{/each}}